---
<%-
# Example source deployment file that can be used:
# ---
# name: myjenkins
# director_uuid: UUID
# networks: {}
# properties:
#   jenkins:
#     password: jEnKins
#
# Then target that deployment file:
#
#     $ bosh deployment path/to/file/above
#
# Then apply this template:
#
#     $ bosh diff deployment_file.yml.erb
#
no_ssl          = true
protocol        = no_ssl ? "http" : "https"
name            = find("name")
common_password = find("properties.jenkins.password")
-%>
name: <%= name %>
director_uuid: <%= find("director_uuid") %>

releases:
- name: jenkins
  version: latest

compilation:
  workers: 8
  network: compile
  cloud_properties: {}

update:
  canaries: 1
  canary_watch_time: 30000-60000
  update_watch_time: 30000-60000
  max_in_flight: 4

networks:
- name: compile
  subnets:
<%% (0..63).each_with_index.map do |i| %>
  - range: 10.244.0.<%%= i*4 %>/30
    reserved:
      - 10.244.0.<%%= i*4 + 1 %>
    cloud_properties:
      name: random
<%% end %>
- name: default
  subnets:
<%% (0..63).each_with_index.map do |i| %>
  - range: 10.244.1.<%%= i*4 %>/30
    reserved:
      - 10.244.1.<%%= i*4 + 1 %>
    static:
      - 10.244.1.<%%= i*4 + 2 %>
    cloud_properties:
      name: random
<%% end
(0..63).each_with_index.map do |i| %>
  - range: 10.244.2.<%%= i*4 %>/30
    reserved:
      - 10.244.2.<%%= i*4 + 1 %>
    cloud_properties:
      name: random
<%% end %>


resource_pools:
- name: warden
  network: default
  size: 1
  stemcell:
    name: bosh-stemcell
    version: latest
  cloud_properties: {}

jobs:
- name: jenkins_master
  template:
  - jenkins_master
  instances: 1
  resource_pool: warden
  networks:
  - name: default
    static_ips:
    - 10.244.1.2

properties:
  jenkins:
    password: <%= common_password %>
    admin:
      password: <%= common_password %>
